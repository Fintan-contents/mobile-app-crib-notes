<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.nablarch.example</groupId>
  <artifactId>authentication-backend</artifactId>
  <version>5u17</version>
  <packaging>war</packaging>

  <properties>
    <scheme>画面オンライン</scheme>

    <!-- 利用するJavaのバージョン -->
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

    <!-- Flywayで構築するよう変更したのでコメントアウト -->
    <!-- gsp-dba-maven-pluginが使用するデータベース設定 -->
    <!-- <db.adminUser>SAMPLE</db.adminUser> -->
    <!-- <db.user>NABLARCH_EXAMPLE</db.user> -->

    <webxml.path>src/main/webapp/WEB-INF/web.xml</webxml.path>
    <version.plugins.jib>2.4.0</version.plugins.jib>

    <!--
     JIBでDockerコンテナを作るときのベースイメージ
     https://hub.docker.com/layers/tomcat/library/tomcat/9.0.31-jdk11-adoptopenjdk-hotspot/images/sha256-e1f3ec646689c558bdd1a8b7045c5eed7c0ca9dbe664a82ba47d1591e3c5faf0?context=explore
    -->
    <jib.from.image>tomcat:9.0.36-jdk11-adoptopenjdk-hotspot</jib.from.image>
    <!--
    <jib.from.image>mcr.microsoft.com/java/jdk:8-zulu-alpine</jib.from.image>
    -->
    <!-- 生成するイメージの名前 -->
    <docker.image.prefix>ws4020wip.azurecr.io</docker.image.prefix>
    <jib.to.image>${docker.image.prefix}/develop-mobile-app-casually/${project.artifactId}</jib.to.image>
    <!-- 生成するタグ -->
    <jib.to.tags>latest,${project.version}</jib.to.tags>
  </properties>

  <profiles>
    <profile>
      <id>dev-deploy</id>
      <distributionManagement>
        <site>
          <id>dev-deploy</id>
          <url>${develop_test_report_url}</url>
        </site>
      </distributionManagement>
    </profile>
  </profiles>

  <dependencyManagement>
